@{
    ViewData["Title"] = "Haley Mueller";
}

<div class="text-center" style="font-style: italic;">
    <p>This site showcases some personal projects that I've created to learn new skills</p>
</div>

<!--ApplesOranges4Me-->

<div class="row">
    <div class="col-lg-3 col-md-12"></div>
    <div class="col-lg-6 col-md-12">
        <div class="row">
            <div class="dropdown">
              <button class="btn btn-outline-secondary dropdown-toggle float-end" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                Sort By
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                <li class="cursor-pointer" onclick="LoadProjectList(1);"><a class="dropdown-item">Significance</a></li>
                <li class="cursor-pointer" onclick="LoadProjectList(2);"><a class="dropdown-item">Date Descending</a></li>
                <li class="cursor-pointer" onclick="LoadProjectList(3);"><a class="dropdown-item">Date Ascending</a></li>
              </ul>
            </div>
        </div>
        <div id="productList"></div>
    </div>
    <div class="col-lg-3 col-md-12"></div>
</div>

@section Scripts {
    <script>
    $(document).ready(function(){
        LoadProjectList(0);
    });
        function LoadProjectList(sortID) {
        $.ajax({
            method: "GET",
            url: "/Home/LoadProjectList/" + sortID
        }).done(function (data) {
            $('#productList').html(data);
        });
    }
    </script>
}